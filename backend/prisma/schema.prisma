generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Sample {
  id        Int      @id @default(autoincrement())
  name      String
  status    Boolean
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)

  @@map("samples")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  phoneNumber String   @map("phone_number")
  email       String   @unique
  password    String
  role        Role     @default(USER)
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)

  @@map("users")
}

model TempAir {
  id                   Int      @id @default(autoincrement())
  temp                 Float
  tempThreshold        Float?   @map("temp_threshold")
  airHumidity          Float    @map("air_humidity")
  airHumidityThreshold Float?   @map("air_humidity_threshold")
  ip                   String
  createdAt            DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt            DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)
  gardenId             Int      @map("garden_id")
  garden               Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)

  @@index([ip])
  @@index([gardenId], map: "temp_airs_garden_id_fkey")
  @@map("temp_airs")
}

model Humi {
  id        Int      @id @default(autoincrement())
  value     Float
  threshold Float?
  ip        String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)
  gardenId  Int      @map("garden_id")
  garden    Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)

  @@index([ip])
  @@index([gardenId], map: "humis_garden_id_fkey")
  @@map("humis")
}

model Light {
  id        Int      @id @default(autoincrement())
  value     Float
  threshold Float?
  ip        String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)
  gardenId  Int      @map("garden_id")
  garden    Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)

  @@index([ip])
  @@index([gardenId], map: "lights_garden_id_fkey")
  @@map("lights")
}

model Fan {
  id        Int      @id @default(autoincrement())
  value     Float?
  status    Boolean
  ip        String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)
  gardenId  Int      @map("garden_id")
  garden    Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)

  @@index([ip])
  @@index([gardenId], map: "fans_garden_id_fkey")
  @@map("fans")
}

model Pump {
  id        Int      @id @default(autoincrement())
  value     Float?
  status    Boolean
  ip        String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)
  gardenId  Int      @map("garden_id")
  garden    Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)

  @@index([ip])
  @@index([gardenId], map: "pumps_garden_id_fkey")
  @@map("pumps")
}

model Nebulizer {
  id        Int      @id @default(autoincrement())
  value     Float?
  status    Boolean
  ip        String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)
  gardenId  Int      @map("garden_id")
  garden    Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)

  @@index([ip])
  @@index([gardenId], map: "nebulizers_garden_id_fkey")
  @@map("nebulizers")
}

model Lamp {
  id        Int      @id @default(autoincrement())
  status    Boolean
  ip        String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)
  gardenId  Int      @map("garden_id")
  garden    Garden   @relation(fields: [gardenId], references: [id], onDelete: Cascade)

  @@index([ip])
  @@index([gardenId], map: "lamps_garden_id_fkey")
  @@map("lamps")
}

model Garden {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  address    String
  width      Int?
  length     Int?
  landArea   Int         @map("land_area")
  createdAt  DateTime    @default(now()) @map("created_at") @db.Timestamp(3)
  updatedAt  DateTime    @default(now()) @updatedAt @map("updated_at") @db.Timestamp(3)
  fans       Fan[]
  humis      Humi[]
  lamps      Lamp[]
  lights     Light[]
  nebulizers Nebulizer[]
  pumps      Pump[]
  tempAirs   TempAir[]

  @@map("gardens")
}

enum Role {
  USER
  ADMIN
}
